<script>
function calculate(){

let area = area.value;
let base = crop.value;
let ph = ph.value;
let soil = soil.value;
let rain = rain.value;
let temp = temp.value;
let humidity = humidity.value;
let fertType = fertType.value;
let fertQty = fertQty.value;
let irrigation = irrigation.value;
let distance = distance.value;
let seed = seed.value;

let yieldPerHectare = base 
* soil 
* fertType 
* irrigation 
* (1 + (seed*0.05));

if(ph < 5.5 || ph > 8){
    yieldPerHectare *= 0.8;
}

if(rain < 400){
    yieldPerHectare *= 0.7;
}

let totalYield = yieldPerHectare * area;

let marketPrice = 20;
let transportCost = distance * 2;
let totalProfit = (totalYield * marketPrice) - transportCost;

let successProbability = Math.min(95, (seed*15 + humidity*0.2));

let sustainability = (soil*20 + irrigation*20);

let risk = "";
if(ph < 5.5) risk += "âš  Low pH Risk<br>";
if(rain < 400) risk += "âš  Drought Risk<br>";
if(fertQty > 300) risk += "âš  Overfertilization Risk<br>";

let suggestion = "Rice";
if(rain < 500) suggestion = "Millet";
if(ph > 7.5) suggestion = "Cotton";

output.innerHTML = `
<h3>ğŸ“Š OUTPUT SECTION</h3>
ğŸŒ¾ Predicted Yield per Hectare: ${yieldPerHectare.toFixed(0)} kg<br>
ğŸ’° Estimated Total Profit: â‚¹ ${totalProfit.toFixed(0)}<br>
ğŸ”„ Suggested Alternative Crop: ${suggestion}<br>
ğŸ“ˆ Success Probability: ${successProbability.toFixed(1)} %<br>
ğŸŒ Sustainability Score: ${sustainability.toFixed(0)}<br>
ğŸš¨ Risk Alerts:<br>${risk || "No Major Risk"}
`;
}
</script>

